<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaTest1.MainWindow"
        Width="500" Height="300"
        Closing="OnWindowClosing"
        Title="AvaloniaTest1">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition/>
        <RowDefinition/>
      </Grid.RowDefinitions>
      <TextBlock Name="myLBL" Text="Hello world" FontSize="36" TextWrapping="Wrap"
             VerticalAlignment="Stretch" />
      <Border Grid.Row="1" BorderBrush="Red" BorderThickness="10">
        <Button Grid.Row="1" Margin="10,0" Content="Click me please" Click="OnBtnClick" />
      </Border>
    </Grid>
</Window>
